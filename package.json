{
  "name": "page-snitch",
  "version": "1.0.2",
  "description": "Tool to check a secure webpage or optionally crawl a secure site looking for any content not being served using HTTPS.",
  "main": "snitch.js",
  "scripts": {
    "snitch": "node_modules/casperjs/bin/casperjs snitch.js",
    "snitch-ignore-ssl-errors": "node_modules/casperjs/bin/casperjs --ignore-ssl-errors=true snitch.js"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "author": "Andy Pattenden <andy@andypattenden.co.uk> (http://www.andypattenden.co.uk)",
  "license": "MIT",
  "dependencies": {
    "casperjs": "^1.1.4",
    "phantomjs-prebuilt": "^2.1.16"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "prettier": "^1.8.2"
  },
  "keywords": [
    "https",
    "mixed",
    "content",
    "security"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andypattenden/page-snitch.git"
  },
  "bugs": {
    "url": "https://github.com/andypattenden/page-snitch/issues"
  },
  "homepage": "https://github.com/andypattenden/page-snitch#readme"
}
